<Window x:Class="AcademicClaimHub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Academic Claim Hub" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <!-- Sidebar Navigation -->
            <StackPanel DockPanel.Dock="Left" Width="200" Background="{StaticResource SecondaryBackground}">
                <TextBlock Text="Navigation" 
                           FontSize="18" FontWeight="Bold" 
                           Foreground="{StaticResource AccentColor}" 
                           Margin="10"/>

                <Button Content="Lecturer Dashboard" Click="GoToLecturer"/>
                <Button Content="Coordinator Dashboard" Click="GoToCoordinator"/>
                <Button Content="Manager Dashboard" Click="GoToManager"/>
            </StackPanel>

            <!-- Main Content Area -->
            <ContentControl x:Name="MainContent" />
        </DockPanel>
    </Grid>
</Window>
