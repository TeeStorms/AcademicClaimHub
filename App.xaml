<Application x:Class="AcademicClaimHub.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Dark Theme -->
        <ResourceDictionary>
            <SolidColorBrush x:Key="PrimaryBackground" Color="#1E1E2E"/>
            <SolidColorBrush x:Key="SecondaryBackground" Color="#2A2A3D"/>
            <SolidColorBrush x:Key="PrimaryText" Color="#E0E0E0"/>
            <SolidColorBrush x:Key="AccentColor" Color="#4FC3F7"/>

            <Style TargetType="Window">
                <Setter Property="Background" Value="{StaticResource PrimaryBackground}"/>
                <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
            </Style>

            <Style TargetType="Button">
                <Setter Property="Background" Value="{StaticResource AccentColor}"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
