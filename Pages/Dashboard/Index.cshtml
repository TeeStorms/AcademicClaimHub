@page
@model ClaimManagementHub.Pages.Dashboard.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Dashboard</h1>
        <p class="text-gray-600">Overview of all claim activities with automation insights</p>
    </div>

    <!-- Automation Stats -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-6 gap-6 mb-8">
        <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-100">
            <p class="text-sm font-medium text-gray-600">Total Claims</p>
            <p class="text-3xl font-bold text-gray-900">@Model.Summary.TotalClaims</p>
        </div>
        <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-100">
            <p class="text-sm font-medium text-gray-600">Pending Review</p>
            <p class="text-3xl font-bold text-yellow-600">@Model.Summary.PendingClaims</p>
        </div>
        <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-100">
            <p class="text-sm font-medium text-gray-600">Approved</p>
            <p class="text-3xl font-bold text-green-600">@Model.Summary.ApprovedClaims</p>
        </div>
        <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-100">
            <p class="text-sm font-medium text-gray-600">Auto-Approved</p>
            <p class="text-3xl font-bold text-blue-600">@Model.Summary.AutoApprovedClaims</p>
        </div>
        <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-100">
            <p class="text-sm font-medium text-gray-600">Rejected</p>
            <p class="text-3xl font-bold text-red-600">@Model.Summary.RejectedClaims</p>
        </div>
        <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-100">
            <p class="text-sm font-medium text-gray-600">Total Approved</p>
            <p class="text-2xl font-bold text-green-700">R@Model.Summary.TotalAmountApproved.ToString("F2")</p>
        </div>
    </div>

    <!-- Workflow Analysis -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
        <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-100">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Automation Performance</h3>
            <div class="space-y-4">
                <div>
                    <p class="text-sm text-gray-600">Auto-Approval Rate</p>
                    <div class="w-full bg-gray-200 rounded-full h-2">
                        <div class="bg-blue-600 h-2 rounded-full" style="width: @((Model.Summary.AutoApprovedClaims * 100) / Math.Max(1, Model.Summary.TotalClaims))%"></div>
                    </div>
                    <p class="text-sm text-gray-600 mt-1">@Model.Summary.AutoApprovedClaims out of @Model.Summary.TotalClaims claims auto-approved</p>
                </div>
                <div>
                    <p class="text-sm text-gray-600">Average Processing Time</p>
                    <p class="text-xl font-bold text-gray-900">@Model.WorkflowAnalysis.AverageProcessingTime.ToString("F1") hours</p>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-100">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Common Flags</h3>
            <div class="space-y-2">
                @foreach (var flag in Model.WorkflowAnalysis.CommonFlags)
                {
                    <div class="flex justify-between items-center">
                        <span class="text-sm text-gray-600">@flag.Key</span>
                        <span class="px-2 py-1 text-xs font-medium bg-yellow-100 text-yellow-800 rounded-full">@flag.Value</span>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Recent Claims -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">Recent Claims</h3>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Lecturer</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Amount</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Automation</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Submitted</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    @foreach (var c in Model.Recent)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4">#@c.Id</td>
                            <td class="px-6 py-4">@c.LecturerName</td>
                            <td class="px-6 py-4">R@c.TotalAmount.ToString("F2")</td>
                            <td class="px-6 py-4">
                                <span class="px-2 py-1 text-xs font-medium rounded-full
                                        @(c.Status == "pending" ? "bg-yellow-100 text-yellow-800" :
                                                                            c.Status == "approved" ? "bg-green-100 text-green-800" :
                                                                            c.Status == "auto-approved" ? "bg-blue-100 text-blue-800" :
                                                                            "bg-red-100 text-red-800")">
                                @c.Status.ToUpperInvariant()
                            </span>
                        </td>
                        <td class="px-6 py-4 text-sm">
                            @if (c.Status == "auto-approved")
                                {
                                    <span class="text-green-600 font-medium">✓ Auto-Processed</span>
                                }
                                else if (c.AdditionalNotes?.Contains("[FLAGGED:") == true)
                                {
                                    <span class="text-orange-600 font-medium">⚠ Flagged</span>
                                }
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-500">@c.SubmittedAt.ToLocalTime().ToString("g")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>