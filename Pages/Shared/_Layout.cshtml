<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ClaimManagementHub</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="min-h-screen bg-gradient-to-br from-blue-50 to-white flex flex-col">
    <nav class="bg-white shadow-lg border-b-4 border-blue-600">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16 items-center">
                <a asp-page="/Index" class="flex items-center space-x-3">
                    <div class="w-10 h-10 bg-gradient-to-br from-blue-600 to-blue-800 rounded-lg flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6l4 2" />
                        </svg>
                    </div>
                    <h1 class="text-xl font-bold text-gray-900">ClaimManagementHub</h1>
                </a>

                <div class="flex items-center space-x-6">
                    <a asp-page="/Index" class="text-gray-600 hover:text-blue-700 hover:bg-blue-50 px-3 py-2 rounded-md">Home</a>
                    <a asp-page="/Lecturer/SubmitClaim" class="text-gray-600 hover:text-blue-700 hover:bg-blue-50 px-3 py-2 rounded-md">Submit Claim</a>
                    <a asp-page="/Coordinator/VerifyClaims" class="text-gray-600 hover:text-blue-700 hover:bg-blue-50 px-3 py-2 rounded-md">Verify Claims</a>
                    <a asp-page="/Dashboard/Index" class="text-gray-600 hover:text-blue-700 hover:bg-blue-50 px-3 py-2 rounded-md">Dashboard</a>
                </div>
            </div>
        </div>
    </nav>

    <main class="flex-1 container mx-auto p-6">
        @RenderBody()
    </main>

    <footer class="bg-white border-t border-gray-200 mt-auto">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 text-center text-sm text-gray-600">
            © @DateTime.Now.Year ClaimManagementHub. All rights reserved.
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
