@page
@model ClaimManagementHub.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="max-w-md mx-auto bg-white rounded-xl shadow-lg p-8 mt-8 border border-gray-100">
    <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">Login to ClaimManagementHub</h2>

    @if (Model.ErrorMessage != null)
    {
        <div class="bg-red-100 border border-red-300 text-red-800 rounded-lg p-4 mb-4 text-center">
            @Model.ErrorMessage
        </div>
    }

    <form method="post" class="space-y-6">
        <div>
            <label class="block text-gray-700 font-medium mb-2">Email</label>
            <input asp-for="Input.Email" class="w-full border-gray-300 rounded-lg shadow-sm p-3" placeholder="Enter your email" />
            <span asp-validation-for="Input.Email" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label class="block text-gray-700 font-medium mb-2">Password</label>
            <input asp-for="Input.Password" type="password" class="w-full border-gray-300 rounded-lg shadow-sm p-3" placeholder="Enter your password" />
            <span asp-validation-for="Input.Password" class="text-red-600 text-sm"></span>
        </div>

        <button type="submit" class="w-full bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 shadow-md font-medium">
            Sign In
        </button>
    </form>

    <div class="mt-6 p-4 bg-gray-50 rounded-lg">
        <h3 class="font-medium text-gray-700 mb-2">Demo Accounts:</h3>
        <div class="text-sm text-gray-600 space-y-1">
            <div><strong>Lecturer:</strong> lecturer@university.com / Password123!</div>
            <div><strong>Coordinator:</strong> coordinator@university.com / Password123!</div>
            <div><strong>HR:</strong> hr@university.com / Password123!</div>
            <div><strong>Manager:</strong> manager@university.com / Password123!</div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}