@page
@model ClaimManagementHub.Pages.HR.DashboardModel
@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">HR Dashboard</h1>
        <p class="text-gray-600">Manage lecturers, generate reports, and process payments</p>
    </div>

    <!-- Quick Actions -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <a href="#reports" class="group bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-all duration-300 border border-gray-100">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">Generate Reports</h3>
            <p class="text-gray-600">Create payment reports and invoices</p>
            <div class="mt-4 text-blue-600 font-medium group-hover:text-blue-700">Generate →</div>
        </a>

        <a href="#lecturers" class="group bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-all duration-300 border border-gray-100">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">Manage Lecturers</h3>
            <p class="text-gray-600">View and update lecturer information</p>
            <div class="mt-4 text-green-600 font-medium group-hover:text-green-700">Manage →</div>
        </a>

        <a href="#payments" class="group bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-all duration-300 border border-gray-100">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">Process Payments</h3>
            <p class="text-gray-600">Approve and process claim payments</p>
            <div class="mt-4 text-purple-600 font-medium group-hover:text-purple-700">Process →</div>
        </a>
    </div>

    <!-- Reports Section -->
    <div id="reports" class="bg-white rounded-xl shadow-lg p-6 mb-8">
        <h3 class="text-xl font-semibold text-gray-900 mb-4">Generate Reports</h3>

        <form method="post" asp-page-handler="GenerateReport" class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Report Type</label>
                <select name="reportType" class="w-full border-gray-300 rounded-lg p-2">
                    <option value="monthly">Monthly Claims</option>
                    <option value="approved">Approved Claims</option>
                    <option value="lecturer">By Lecturer</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">From Date</label>
                <input type="date" name="fromDate" class="w-full border-gray-300 rounded-lg p-2" />
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">To Date</label>
                <input type="date" name="toDate" class="w-full border-gray-300 rounded-lg p-2" />
            </div>
            <div class="flex items-end">
                <button type="submit" class="w-full bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">
                    Generate Report
                </button>
            </div>
        </form>

        @if (Model.GeneratedReport != null)
        {
            <div class="mt-4 p-4 bg-green-50 border border-green-200 rounded-lg">
                <h4 class="font-semibold text-green-800">Report Generated Successfully!</h4>
                <p class="text-green-700">@Model.GeneratedReport</p>
                <button onclick="window.print()" class="mt-2 bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">
                    Print Report
                </button>
            </div>
        }
    </div>

    <!-- Lecturers Management -->
    <div id="lecturers" class="bg-white rounded-xl shadow-lg p-6 mb-8">
        <h3 class="text-xl font-semibold text-gray-900 mb-4">Lecturer Management</h3>

        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Total Claims</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Total Approved</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    @foreach (var lecturer in Model.Lecturers)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4">@lecturer.FullName</td>
                            <td class="px-6 py-4">@lecturer.Email</td>
                            <td class="px-6 py-4">@lecturer.TotalClaims</td>
                            <td class="px-6 py-4">R@lecturer.TotalApproved.ToString("F2")</td>
                            <td class="px-6 py-4">
                                <button class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                                    View Details
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Payment Processing -->
    <div id="payments" class="bg-white rounded-xl shadow-lg p-6">
        <h3 class="text-xl font-semibold text-gray-900 mb-4">Payment Processing</h3>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
            <div class="bg-green-50 border border-green-200 rounded-lg p-4">
                <p class="text-sm font-medium text-green-800">Ready for Payment</p>
                <p class="text-2xl font-bold text-green-900">@Model.PaymentSummary.ReadyForPayment</p>
            </div>
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                <p class="text-sm font-medium text-blue-800">Total Amount</p>
                <p class="text-2xl font-bold text-blue-900">R@Model.PaymentSummary.TotalAmount.ToString("F2")</p>
            </div>
            <div class="bg-purple-50 border border-purple-200 rounded-lg p-4">
                <p class="text-sm font-medium text-purple-800">Lecturers</p>
                <p class="text-2xl font-bold text-purple-900">@Model.PaymentSummary.TotalLecturers</p>
            </div>
            <div class="bg-orange-50 border border-orange-200 rounded-lg p-4">
                <p class="text-sm font-medium text-orange-800">Processed This Month</p>
                <p class="text-2xl font-bold text-orange-900">@Model.PaymentSummary.ProcessedThisMonth</p>
            </div>
        </div>

        <form method="post" asp-page-handler="ProcessPayments">
            <button type="submit" class="bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 font-medium">
                Process All Approved Payments
            </button>
        </form>

        @if (Model.ProcessedMessage != null)
        {
            <div class="mt-4 p-4 bg-green-100 border border-green-300 text-green-800 rounded-lg">
                @Model.ProcessedMessage
            </div>
        }
    </div>
</div>