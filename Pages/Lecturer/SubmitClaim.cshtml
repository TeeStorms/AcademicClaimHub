@page
@model ClaimManagementHub.Pages.Lecturer.SubmitClaimModel
@{
    ViewData["Title"] = "Submit Claim";
}

<div class="max-w-3xl mx-auto bg-white shadow-lg rounded-xl p-8 mt-6 border border-gray-100">
    <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">Lecturer Claim Submission</h2>

    @if (Model.SuccessMessage != null)
    {
        <div class="bg-green-100 border border-green-300 text-green-800 rounded-lg p-4 mb-4 text-center">
            @Model.SuccessMessage
        </div>
    }

    <form method="post" enctype="multipart/form-data" class="space-y-6">
        <div>
            <label class="block text-gray-700 font-medium mb-2">Lecturer Name</label>
            <input asp-for="Claim.LecturerName" class="w-full border-gray-300 rounded-lg shadow-sm p-3" />
            <span asp-validation-for="Claim.LecturerName" class="text-red-600 text-sm"></span>
        </div>

        <div class="grid grid-cols-2 gap-4">
            <div>
                <label class="block text-gray-700 font-medium mb-2">Hours Worked</label>
                <input asp-for="Claim.HoursWorked" class="w-full border-gray-300 rounded-lg shadow-sm p-3" type="number" step="0.25" min="0" />
                <span asp-validation-for="Claim.HoursWorked" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label class="block text-gray-700 font-medium mb-2">Hourly Rate (R)</label>
                <input asp-for="Claim.HourlyRate" class="w-full border-gray-300 rounded-lg shadow-sm p-3" type="number" step="0.01" min="0" />
                <span asp-validation-for="Claim.HourlyRate" class="text-red-600 text-sm"></span>
            </div>
        </div>

        <div>
            <label class="block text-gray-700 font-medium mb-2">Additional Notes</label>
            <textarea asp-for="Claim.AdditionalNotes" rows="3" class="w-full border-gray-300 rounded-lg shadow-sm p-3"></textarea>
        </div>

        <div>
            <label class="block text-gray-700 font-medium mb-2">Upload Supporting Document</label>
            <input asp-for="Upload" type="file" class="w-full border-gray-300 rounded-lg p-2" accept=".pdf,.docx,.xlsx" />
            <span asp-validation-for="Upload" class="text-red-600 text-sm"></span>
        </div>

        <div class="text-right">
            <p class="text-gray-700 font-semibold mb-2">
                <strong>Total Amount:</strong> R<span id="totalAmount">@Model.Claim.TotalAmount.ToString("F2")</span>
            </p>
        </div>

        <div class="flex justify-end">
            <button type="submit" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 shadow-md">
                Submit Claim
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const hoursInput = document.querySelector('[name="Claim.HoursWorked"]');
        const rateInput = document.querySelector('[name="Claim.HourlyRate"]');
        const totalDisplay = document.getElementById("totalAmount");

        function updateTotal() {
            const hours = parseFloat(hoursInput?.value) || 0;
            const rate = parseFloat(rateInput?.value) || 0;
            totalDisplay.textContent = (hours * rate).toFixed(2);
        }

        hoursInput?.addEventListener("input", updateTotal);
        rateInput?.addEventListener("input", updateTotal);
    </script>
}
