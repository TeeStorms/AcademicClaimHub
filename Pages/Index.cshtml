@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Welcome to ClaimManagementHub</h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Submit claims, upload supporting documents, and let coordinators verify them quickly.
        </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
        <a asp-page="/Lecturer/SubmitClaim" class="group bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition-all duration-300 border border-gray-100">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">Submit Claims</h3>
            <p class="text-gray-600">Quick form for lecturers to submit hours and attach documents.</p>
            <div class="mt-4 text-blue-600 font-medium group-hover:text-blue-700">Get Started →</div>
        </a>
        <a asp-page="/Coordinator/VerifyClaims" class="group bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition-all duration-300 border border-gray-100">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">Verify Claims</h3>
            <p class="text-gray-600">Coordinators can approve or reject claims.</p>
            <div class="mt-4 text-green-600 font-medium group-hover:text-green-700">Review →</div>
        </a>
        <a asp-page="/Dashboard/Index" class="group bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition-all duration-300 border border-gray-100">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">Dashboard</h3>
            <p class="text-gray-600">Overview of claim statistics and recent activity.</p>
            <div class="mt-4 text-purple-600 font-medium group-hover:text-purple-700">View Dashboard →</div>
        </a>
    </div>
</div>
