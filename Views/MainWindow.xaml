<Window x:Class="AcademicClaimHub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Academic Claim Hub" Height="520" Width="920"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <!-- Top Header / Breadcrumb -->
        <Grid DockPanel.Dock="Top" Background="{StaticResource SecondaryBackground}" Height="56">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="txtCurrentPage"
                       Text="Welcome"
                       VerticalAlignment="Center"
                       Margin="16,0,0,0"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="{StaticResource AccentColor}"/>
        </Grid>

        <!-- Sidebar Navigation -->
        <StackPanel DockPanel.Dock="Left" Width="220" Background="{StaticResource SecondaryBackground}">
            <TextBlock Text="Navigation"
                       FontSize="18" FontWeight="Bold"
                       Foreground="{StaticResource AccentColor}"
                       Margin="12,12,12,8"/>

            <Button Content="Lecturer Dashboard" Click="GoToLecturer" Margin="12,4,12,0"/>
            <Button Content="Coordinator Dashboard" Click="GoToCoordinator" Margin="12,4,12,0"/>
            <Button Content="Manager Dashboard" Click="GoToManager" Margin="12,4,12,12"/>
        </StackPanel>

        <!-- Main Content -->
        <Border Margin="10" CornerRadius="8" BorderBrush="#3A3B4F" BorderThickness="1" Padding="6">
            <ContentControl x:Name="MainContent"/>
        </Border>
    </DockPanel>
</Window>
