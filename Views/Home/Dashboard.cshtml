@{
    ViewData["Title"] = "Dashboard - ClaimFlow Pro";
    Layout = "_Layout"; // Add this line
}

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50 py-8">
    <div class="max-w-7xl mx-auto px-6">
        <!-- Header -->
        <div class="mb-8 slide-up">
            <h1 class="text-4xl font-bold text-gray-900 bg-gradient-to-r from-gray-900 to-blue-900 bg-clip-text text-transparent">
                Dashboard Overview
            </h1>
            <p class="text-gray-600 mt-3 text-lg">Welcome back! Here's your claim management summary.</p>
        </div>

        <!-- Stats Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-2xl p-6 shadow-xl border border-gray-200/50 hover-lift group">
                <div class="flex items-center justify-between mb-4">
                    <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300 shadow-lg">
                        <i class="fas fa-file-alt text-white text-lg"></i>
                    </div>
                    <div class="text-right">
                        <div class="text-2xl font-bold text-gray-900">@ViewBag.DashboardData.Summary.TotalClaims</div>
                        <div class="text-sm text-gray-600">Total Claims</div>
                    </div>
                </div>
                <div class="text-xs text-blue-600 font-medium">All time claims</div>
            </div>

            <div class="bg-white rounded-2xl p-6 shadow-xl border border-gray-200/50 hover-lift group">
                <div class="flex items-center justify-between mb-4">
                    <div class="w-12 h-12 bg-gradient-to-br from-yellow-500 to-yellow-600 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300 shadow-lg">
                        <i class="fas fa-clock text-white text-lg"></i>
                    </div>
                    <div class="text-right">
                        <div class="text-2xl font-bold text-gray-900">@ViewBag.DashboardData.Summary.PendingClaims</div>
                        <div class="text-sm text-gray-600">Pending</div>
                    </div>
                </div>
                <div class="text-xs text-yellow-600 font-medium">Awaiting review</div>
            </div>

            <div class="bg-white rounded-2xl p-6 shadow-xl border border-gray-200/50 hover-lift group">
                <div class="flex items-center justify-between mb-4">
                    <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300 shadow-lg">
                        <i class="fas fa-check-circle text-white text-lg"></i>
                    </div>
                    <div class="text-right">
                        <div class="text-2xl font-bold text-gray-900">@ViewBag.DashboardData.Summary.ApprovedClaims</div>
                        <div class="text-sm text-gray-600">Approved</div>
                    </div>
                </div>
                <div class="text-xs text-green-600 font-medium">Successfully processed</div>
            </div>

            <div class="bg-white rounded-2xl p-6 shadow-xl border border-gray-200/50 hover-lift group">
                <div class="flex items-center justify-between mb-4">
                    <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300 shadow-lg">
                        <i class="fas fa-chart-line text-white text-lg"></i>
                    </div>
                    <div class="text-right">
                        <div class="text-2xl font-bold text-gray-900">R@ViewBag.DashboardData.Summary.TotalAmountApproved.ToString("F2")</div>
                        <div class="text-sm text-gray-600">Total Amount</div>
                    </div>
                </div>
                <div class="text-xs text-primary-600 font-medium">Approved claims value</div>
            </div>
        </div>

        <!-- Quick Actions & Recent Activity -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Quick Actions -->
            <div class="bg-white rounded-2xl p-6 shadow-xl border border-gray-200/50 slide-up">
                <h3 class="text-xl font-bold text-gray-900 mb-6">Quick Actions</h3>
                <div class="space-y-4">
                    @if (User.HasClaim("Role", "Lecturer"))
                    {
                        <a href="@Url.Action("SubmitClaim", "Lecturer")" class="flex items-center space-x-4 p-4 bg-primary-50 rounded-xl border border-primary-200 hover:bg-primary-100 transition-all duration-300 group hover-lift">
                            <div class="w-12 h-12 bg-primary-500 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300 shadow-md">
                                <i class="fas fa-plus text-white text-lg"></i>
                            </div>
                            <div class="flex-1">
                                <div class="font-semibold text-gray-900">Submit New Claim</div>
                                <div class="text-sm text-gray-600">Create and submit a new claim</div>
                            </div>
                            <i class="fas fa-arrow-right text-primary-600 group-hover:translate-x-1 transition-transform duration-300"></i>
                        </a>
                    }
                    @if (User.HasClaim("Role", "Coordinator") || User.HasClaim("Role", "Manager"))
                    {
                        <a href="@Url.Action("VerifyClaims", "Coordinator")" class="flex items-center space-x-4 p-4 bg-blue-50 rounded-xl border border-blue-200 hover:bg-blue-100 transition-all duration-300 group hover-lift">
                            <div class="w-12 h-12 bg-blue-500 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300 shadow-md">
                                <i class="fas fa-check-circle text-white text-lg"></i>
                            </div>
                            <div class="flex-1">
                                <div class="font-semibold text-gray-900">Review Claims</div>
                                <div class="text-sm text-gray-600">Approve or reject pending claims</div>
                            </div>
                            <i class="fas fa-arrow-right text-blue-600 group-hover:translate-x-1 transition-transform duration-300"></i>
                        </a>
                    }
                    @if (User.HasClaim("Role", "HR"))
                    {
                        <a href="@Url.Action("Dashboard", "HR")" class="flex items-center space-x-4 p-4 bg-green-50 rounded-xl border border-green-200 hover:bg-green-100 transition-all duration-300 group hover-lift">
                            <div class="w-12 h-12 bg-green-500 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300 shadow-md">
                                <i class="fas fa-chart-pie text-white text-lg"></i>
                            </div>
                            <div class="flex-1">
                                <div class="font-semibold text-gray-900">HR Dashboard</div>
                                <div class="text-sm text-gray-600">View analytics and reports</div>
                            </div>
                            <i class="fas fa-arrow-right text-green-600 group-hover:translate-x-1 transition-transform duration-300"></i>
                        </a>
                    }
                </div>
            </div>

            <!-- Recent Activity -->
            <div class="bg-white rounded-2xl p-6 shadow-xl border border-gray-200/50 slide-up" style="animation-delay: 0.1s">
                <div class="flex items-center justify-between mb-6">
                    <h3 class="text-xl font-bold text-gray-900">Recent Claims</h3>
                    <span class="text-sm text-gray-500 bg-gray-100 px-3 py-1 rounded-full">Latest 5</span>
                </div>
                <div class="space-y-4">
                    @foreach (var claim in ViewBag.DashboardData.RecentClaims)
                    {
                        <div class="flex items-center justify-between p-4 bg-gray-50 rounded-xl border border-gray-200/50 hover:shadow-md transition-all duration-300 group">
                            <div class="flex items-center space-x-3">
                                <div class="w-10 h-10 bg-gradient-to-br from-gray-500 to-gray-600 rounded-2xl flex items-center justify-center shadow-md group-hover:scale-110 transition-transform duration-300">
                                    <i class="fas fa-user text-white text-sm"></i>
                                </div>
                                <div>
                                    <div class="font-semibold text-gray-900">@claim.LecturerName</div>
                                    <div class="text-sm text-gray-600">R@claim.TotalAmount.ToString("F2")</div>
                                </div>
                            </div>
                            <div class="text-right">
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium @(claim.Status == "approved" ? "bg-green-100 text-green-800" : claim.Status == "pending" ? "bg-yellow-100 text-yellow-800" : "bg-red-100 text-red-800")">
                                    @claim.Status
                                </span>
                                <div class="text-xs text-gray-500 mt-1">@claim.SubmittedAt.ToString("MMM dd")</div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Dashboard loaded successfully');

            // Add animation delays to slide-up elements
            const slideUpElements = document.querySelectorAll('.slide-up');
            slideUpElements.forEach((el, index) => {
                el.style.animationDelay = `${index * 0.1}s`;
            });

            // Add hover effects to stats cards
            const statCards = document.querySelectorAll('.hover-lift');
            statCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-8px)';
                });

                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
        });
    </script>
}