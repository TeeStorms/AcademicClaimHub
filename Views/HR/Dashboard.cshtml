@{
    ViewData["Title"] = "HR Analytics - ClaimFlow Pro";
}

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-8 slide-up">
            <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
                <div>
                    <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 bg-gradient-to-r from-gray-900 to-blue-900 bg-clip-text text-transparent">
                        HR Analytics Dashboard
                    </h1>
                    <p class="text-gray-600 mt-2 sm:mt-3 text-base sm:text-lg">Comprehensive insights and payment management</p>
                </div>
                <div class="mt-4 lg:mt-0 flex flex-col sm:flex-row gap-3">
                    <button id="processPaymentsBtn" class="btn btn-primary flex items-center justify-center space-x-2 py-3 px-6">
                        <i class="fas fa-money-bill-wave"></i>
                        <span>Process Payments</span>
                    </button>
                    <button id="refreshDataBtn" class="btn btn-secondary flex items-center justify-center space-x-2 py-3 px-6">
                        <i class="fas fa-sync-alt"></i>
                        <span>Refresh Data</span>
                    </button>
                </div>
            </div>
        </div>

        <!-- Stats Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6 mb-8">
            <!-- Ready for Payment Card -->
            <div class="card bg-gradient-to-br from-green-500 to-green-600 text-white shadow-2xl hover-lift slide-up">
                <div class="card-body">
                    <div class="flex items-center justify-between mb-4">
                        <i class="fas fa-check-circle text-2xl text-white opacity-90"></i>
                        <div class="text-right">
                            <div class="text-2xl sm:text-3xl font-bold text-white">@ViewBag.PaymentSummary?.ReadyForPayment</div>
                            <div class="text-green-100 text-sm">Ready for Payment</div>
                        </div>
                    </div>
                    <div class="flex justify-between items-center">
                        <span class="text-green-100 text-sm">Total Amount</span>
                        <span class="text-white font-semibold">R@(ViewBag.PaymentSummary?.TotalAmount.ToString("F2") ?? "0.00")</span>
                    </div>
                </div>
            </div>

            <!-- Active Lecturers Card -->
            <div class="card bg-gradient-to-br from-blue-500 to-blue-600 text-white shadow-2xl hover-lift slide-up" style="animation-delay: 0.1s">
                <div class="card-body">
                    <div class="flex items-center justify-between mb-4">
                        <i class="fas fa-users text-2xl text-white opacity-90"></i>
                        <div class="text-right">
                            <div class="text-2xl sm:text-3xl font-bold text-white">@ViewBag.PaymentSummary?.TotalLecturers</div>
                            <div class="text-blue-100 text-sm">Active Lecturers</div>
                        </div>
                    </div>
                    <div class="flex justify-between items-center">
                        <span class="text-blue-100 text-sm">With Claims</span>
                        <span class="text-white font-semibold">@ViewBag.TotalLecturers Total</span>
                    </div>
                </div>
            </div>

            <!-- This Month Card -->
            <div class="card bg-gradient-to-br from-purple-500 to-purple-600 text-white shadow-2xl hover-lift slide-up" style="animation-delay: 0.2s">
                <div class="card-body">
                    <div class="flex items-center justify-between mb-4">
                        <i class="fas fa-calendar-alt text-2xl text-white opacity-90"></i>
                        <div class="text-right">
                            <div class="text-2xl sm:text-3xl font-bold text-white">@ViewBag.PaymentSummary?.ProcessedThisMonth</div>
                            <div class="text-purple-100 text-sm">This Month</div>
                        </div>
                    </div>
                    <div class="flex justify-between items-center">
                        <span class="text-purple-100 text-sm">Monthly Activity</span>
                        <span class="text-white font-semibold">Processed</span>
                    </div>
                </div>
            </div>

            <!-- Average Claim Card -->
            <div class="card bg-gradient-to-br from-orange-500 to-orange-600 text-white shadow-2xl hover-lift slide-up" style="animation-delay: 0.3s">
                <div class="card-body">
                    <div class="flex items-center justify-between mb-4">
                        <i class="fas fa-calculator text-2xl text-white opacity-90"></i>
                        <div class="text-right">
                            <div class="text-2xl sm:text-3xl font-bold text-white">R@(ViewBag.PaymentSummary?.AverageClaimAmount.ToString("F2") ?? "0.00")</div>
                            <div class="text-orange-100 text-sm">Average Claim</div>
                        </div>
                    </div>
                    <div class="flex justify-between items-center">
                        <span class="text-orange-100 text-sm">Per Approved</span>
                        <span class="text-white font-semibold">Amount</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Sidebar - Report Generator & Quick Actions -->
            <div class="lg:col-span-1 space-y-6">
                <!-- Report Generator -->
                <div class="card slide-up">
                    <div class="card-header">
                        <div class="flex items-center space-x-3">
                            <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center shadow-lg">
                                <i class="fas fa-chart-bar text-white text-lg"></i>
                            </div>
                            <div>
                                <h3 class="text-xl font-bold text-gray-900">Analytics Reports</h3>
                                <p class="text-gray-600 text-sm">Generate detailed insights</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <form id="reportForm" method="post" action="@Url.Action("GenerateReport", "HR")" class="space-y-4">
                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                <label class="form-label">Report Type</label>
                                <select name="reportType" class="form-input">
                                    <option value="monthly">📊 Monthly Summary</option>
                                    <option value="approved">✅ Approved Claims</option>
                                    <option value="lecturer">👨‍🏫 Lecturer Performance</option>
                                </select>
                            </div>

                            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                                <div class="form-group">
                                    <label class="form-label">From Date</label>
                                    <input type="date" name="fromDate" value="@ViewBag.ReportFromDate" class="form-input">
                                </div>
                                <div class="form-group">
                                    <label class="form-label">To Date</label>
                                    <input type="date" name="toDate" value="@ViewBag.ReportToDate" class="form-input">
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary w-full py-3 flex items-center justify-center space-x-2">
                                <i class="fas fa-download"></i>
                                <span>Generate Report</span>
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="card slide-up" style="animation-delay: 0.1s">
                    <div class="card-header">
                        <h3 class="text-lg font-semibold text-gray-900">Quick Actions</h3>
                    </div>
                    <div class="card-body space-y-3">
                        <button class="w-full text-left p-4 bg-blue-50 rounded-xl border border-blue-200 hover:bg-blue-100 transition-all duration-300 flex items-center space-x-3 group">
                            <div class="w-10 h-10 bg-blue-500 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                                <i class="fas fa-file-export text-white text-sm"></i>
                            </div>
                            <span class="text-sm font-medium text-gray-700">Export Data</span>
                        </button>
                        <button class="w-full text-left p-4 bg-purple-50 rounded-xl border border-purple-200 hover:bg-purple-100 transition-all duration-300 flex items-center space-x-3 group">
                            <div class="w-10 h-10 bg-purple-500 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                                <i class="fas fa-envelope text-white text-sm"></i>
                            </div>
                            <span class="text-sm font-medium text-gray-700">Send Reminders</span>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Main Content Area -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Lecturer Performance -->
                <div class="card slide-up">
                    <div class="card-header bg-gradient-to-r from-gray-50 to-white">
                        <div class="flex items-center justify-between">
                            <h3 class="text-xl font-bold text-gray-900">📈 Lecturer Performance</h3>
                            <span class="text-sm text-gray-500 bg-gray-100 px-3 py-1 rounded-full">@(ViewBag.Lecturers?.Count ?? 0) active</span>
                        </div>
                    </div>
                    <div class="overflow-x-auto">
                        <table class="table">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Lecturer</th>
                                    <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Claims</th>
                                    <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Status</th>
                                    <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Amount</th>
                                    <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Last Activity</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200">
                                @if (ViewBag.Lecturers != null)
                                {
                                    foreach (var lecturer in ViewBag.Lecturers)
                                    {
                                        <tr class="hover:bg-blue-50/50 transition-colors duration-200 group">
                                            <td class="px-4 sm:px-6 py-4">
                                                <div class="flex items-center space-x-3">
                                                    <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center shadow-md group-hover:scale-110 transition-transform duration-300">
                                                        <i class="fas fa-user text-white text-sm"></i>
                                                    </div>
                                                    <div>
                                                        <div class="font-semibold text-gray-900 text-sm sm:text-base">@lecturer.FullName</div>
                                                        <div class="text-xs text-gray-500">@lecturer.Email</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="px-4 sm:px-6 py-4">
                                                <div class="text-center">
                                                    <div class="text-lg font-bold text-gray-900">@lecturer.TotalClaims</div>
                                                    <div class="text-xs text-gray-500">total</div>
                                                </div>
                                            </td>
                                            <td class="px-4 sm:px-6 py-4">
                                                <div class="space-y-1">
                                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                                        @lecturer.PendingClaims pending
                                                    </span>
                                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                        @lecturer.ApprovedClaims approved
                                                    </span>
                                                </div>
                                            </td>
                                            <td class="px-4 sm:px-6 py-4">
                                                <div class="text-right">
                                                    <div class="text-lg font-bold text-green-600">R@(lecturer.TotalApproved.ToString("F2"))</div>
                                                    <div class="text-xs text-gray-500">approved</div>
                                                </div>
                                            </td>
                                            <td class="px-4 sm:px-6 py-4">
                                                <div class="text-sm text-gray-500 text-center">
                                                    @if (lecturer.LastSubmission != null)
                                                    {
                                                        <div>@lecturer.LastSubmission.ToString("MMM dd")</div>
                                                        <div class="text-xs text-gray-400">@lecturer.LastSubmission.ToString("yyyy")</div>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-gray-400 italic text-xs">No activity</span>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="px-6 py-8 text-center text-gray-500">
                                            <i class="fas fa-users text-3xl text-gray-300 mb-3"></i>
                                            <p>No lecturer data available</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Report Results -->
                <div id="reportResults" class="card hidden slide-up">
                    <div class="card-header">
                        <div class="flex items-center justify-between">
                            <h3 class="text-xl font-bold text-gray-900">📋 Report Results</h3>
                            <button onclick="closeReport()" class="text-gray-400 hover:text-gray-600 transition-colors duration-300">
                                <i class="fas fa-times text-xl"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div id="reportContent" class="space-y-4">
                            <!-- Dynamic content will appear here -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Process Payments button
            document.getElementById('processPaymentsBtn')?.addEventListener('click', function() {
                const button = this;
                const originalHTML = button.innerHTML;

                button.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Processing...';
                button.disabled = true;
                button.classList.add('loading');

                // Simulate API call
                setTimeout(() => {
                    utils.showNotification('Payments processed successfully!', 'success');
                    button.innerHTML = originalHTML;
                    button.disabled = false;
                    button.classList.remove('loading');
                }, 2000);
            });

            // Refresh Data button
            document.getElementById('refreshDataBtn')?.addEventListener('click', function() {
                const button = this;
                const originalHTML = button.innerHTML;

                button.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Refreshing...';
                button.disabled = true;

                setTimeout(() => {
                    location.reload();
                }, 1000);
            });

            // Form validation
            const reportForm = document.getElementById('reportForm');
            if (reportForm) {
                reportForm.addEventListener('submit', function(e) {
                    const fromDate = this.querySelector('input[name="fromDate"]');
                    const toDate = this.querySelector('input[name="toDate"]');

                    if (fromDate.value && toDate.value && new Date(fromDate.value) > new Date(toDate.value)) {
                        e.preventDefault();
                        utils.showNotification('From date cannot be after to date', 'error');
                        return false;
                    }

                    // Show loading state
                    const submitButton = this.querySelector('button[type="submit"]');
                    submitButton.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Generating...';
                    submitButton.disabled = true;
                });
            }

            // Make functions globally available
            window.closeReport = function() {
                const reportResults = document.getElementById('reportResults');
                if (reportResults) {
                    reportResults.classList.add('hidden');
                }
            };

            window.downloadReport = function() {
                utils.showNotification('Report download started...', 'info');
            };

            // Initialize tooltips if any
            const tooltipElements = document.querySelectorAll('[data-tooltip]');
            tooltipElements.forEach(element => {
                element.addEventListener('mouseenter', function() {
                    // Add tooltip implementation if needed
                });
            });
        });
    </script>
}