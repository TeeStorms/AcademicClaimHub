<UserControl x:Class="AcademicClaimHub.Views.LecturerDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Layout container with background color -->
    <Grid Background="{StaticResource PrimaryBackground}">
        <StackPanel Margin="20" MaxWidth="520">

            <!-- Page header -->
            <TextBlock Text="Lecturer Dashboard"
                       FontSize="22" FontWeight="Bold"
                       Foreground="{StaticResource AccentColor}"/>

            <!-- Input field: Lecturer name -->
            <TextBlock Text="Lecturer Name:" Margin="0,12,0,2"/>
            <TextBox x:Name="txtLecturerName"/>

            <!-- Input field: Hours worked (numeric only) -->
            <TextBlock Text="Hours Worked:" Margin="0,12,0,2"/>
            <TextBox x:Name="txtHours"
                     PreviewTextInput="NumericOnly_PreviewTextInput"
                     DataObject.Pasting="NumericOnly_Pasting"/>

            <!-- Input field: Hourly rate (numeric only) -->
            <TextBlock Text="Hourly Rate:" Margin="0,12,0,2"/>
            <TextBox x:Name="txtRate"
                     PreviewTextInput="NumericOnly_PreviewTextInput"
                     DataObject.Pasting="NumericOnly_Pasting"/>

            <!-- Button to submit the claim -->
            <Button Content="Submit Claim" Click="SubmitClaim_Click" Margin="0,16,0,0"/>

            <!-- Status message (feedback after submission) -->
            <TextBlock x:Name="lblStatus"
                       Margin="0,10,0,0"
                       Foreground="{StaticResource AccentColor}"/>
        </StackPanel>
    </Grid>
</UserControl>
