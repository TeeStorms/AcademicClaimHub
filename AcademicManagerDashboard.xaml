<UserControl x:Class="AcademicClaimHub.Views.AcademicManagerDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <!-- Style for right-aligned numeric cells -->
        <Style x:Key="RightAlignedCell" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="4,0,4,0"/>
        </Style>

        <!-- Style for left-aligned text cells -->
        <Style x:Key="LeftAlignedCell" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="4,0,4,0"/>
        </Style>

        <!-- Style for centered headers with blue background -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <!-- your blue brush -->
            <Setter Property="Foreground" Value="White"/>
            <!-- keep text visible -->
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </UserControl.Resources>

    <!-- Main container -->
    <Grid Background="{StaticResource PrimaryBackground}">
        <StackPanel Margin="20">

            <!-- Page Title -->
            <TextBlock Text="Academic Manager Dashboard"
                       FontSize="24" FontWeight="Bold"
                       Foreground="{StaticResource AccentColor}"
                       Margin="0,0,0,14"/>

            <!-- Button to load statistics -->
            <Button Content="Load Statistics" 
                    Click="ViewStats_Click" 
                    Width="150" 
                    Margin="0,0,0,12"/>

            <!-- Overall summary of all claims -->
            <TextBlock Text="Overall Summary" 
                       FontWeight="Bold" 
                       Margin="0,6,0,4"/>
            <DataGrid x:Name="StatsGrid" 
                      Height="140" 
                      Margin="0,0,0,12" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Statistic" 
                                        Binding="{Binding Key}" 
                                        Width="*" 
                                        ElementStyle="{StaticResource LeftAlignedCell}"/>
                    <DataGridTextColumn Header="Value" 
                                        Binding="{Binding Value}" 
                                        Width="*" 
                                        ElementStyle="{StaticResource RightAlignedCell}"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Breakdown of claims by status -->
            <TextBlock Text="Status Breakdown" 
                       FontWeight="Bold" 
                       Margin="0,6,0,4"/>
            <DataGrid x:Name="StatusBreakdownGrid" 
                      Height="120" 
                      Margin="0,0,0,12" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Status" Width="*" ElementStyle="{StaticResource LeftAlignedCell}">
                        <DataGridTextColumn.Binding>
                            <Binding Path="Status"/>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Count" Width="*" ElementStyle="{StaticResource RightAlignedCell}">
                        <DataGridTextColumn.Binding>
                            <Binding Path="Count"/>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Total Amount" Width="*" ElementStyle="{StaticResource RightAlignedCell}">
                        <DataGridTextColumn.Binding>
                            <Binding Path="TotalAmount" StringFormat="C"/>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Summary of claims per lecturer -->
            <TextBlock Text="Per-Lecturer Summary" 
                       FontWeight="Bold" 
                       Margin="0,6,0,4"/>
            <DataGrid x:Name="PerLecturerGrid" 
                      Height="180" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Lecturer" Width="*" ElementStyle="{StaticResource LeftAlignedCell}">
                        <DataGridTextColumn.Binding>
                            <Binding Path="LecturerName"/>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Claims" Width="*" ElementStyle="{StaticResource RightAlignedCell}">
                        <DataGridTextColumn.Binding>
                            <Binding Path="Count"/>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Total Hours" Width="*" ElementStyle="{StaticResource RightAlignedCell}">
                        <DataGridTextColumn.Binding>
                            <Binding Path="TotalHours"/>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Total Amount" Width="*" ElementStyle="{StaticResource RightAlignedCell}">
                        <DataGridTextColumn.Binding>
                            <Binding Path="TotalAmount" StringFormat="C"/>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>

        </StackPanel>
    </Grid>
</UserControl>
