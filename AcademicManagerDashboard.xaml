<UserControl x:Class="AcademicClaimHub.Views.AcademicManagerDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="{StaticResource PrimaryBackground}">
        <StackPanel Margin="20">
            <TextBlock Text="Academic Manager Dashboard"
                       FontSize="24" FontWeight="Bold"
                       Foreground="{StaticResource AccentColor}"
                       Margin="0,0,0,14"/>

            <Button Content="Load Statistics" Click="ViewStats_Click" Width="150" Margin="0,0,0,12"/>

            <!-- Summary (key-value) -->
            <TextBlock Text="Overall Summary" FontWeight="Bold" Margin="0,6,0,4"/>
            <DataGrid x:Name="StatsGrid" Height="140" Margin="0,0,0,12">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Statistic" Binding="{Binding Key}" Width="2*"/>
                    <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Status breakdown -->
            <TextBlock Text="Status Breakdown" FontWeight="Bold" Margin="0,6,0,4"/>
            <DataGrid x:Name="StatusBreakdownGrid" Height="120" Margin="0,0,0,12">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="2*"/>
                    <DataGridTextColumn Header="Count" Binding="{Binding Count}" Width="*"/>
                    <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Per-lecturer summary -->
            <TextBlock Text="Per-Lecturer Summary" FontWeight="Bold" Margin="0,6,0,4"/>
            <DataGrid x:Name="PerLecturerGrid" Height="180">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Lecturer" Binding="{Binding LecturerName}" Width="2*"/>
                    <DataGridTextColumn Header="Claims" Binding="{Binding Count}" Width="*"/>
                    <DataGridTextColumn Header="Total Hours" Binding="{Binding TotalHours}" Width="*"/>
                    <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
