<UserControl x:Class="AcademicClaimHub.Views.ProgrammeCoordinatorDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="{StaticResource PrimaryBackground}">
        <StackPanel Margin="20">
            <TextBlock Text="Programme Coordinator Dashboard" 
                       FontSize="22" FontWeight="Bold"
                       Foreground="{StaticResource AccentColor}"/>
            <Button Content="Review Claims" Margin="0,10,0,0"/>
            <Button Content="Approve/Reject Claims"/>
        </StackPanel>
    </Grid>
</UserControl>
